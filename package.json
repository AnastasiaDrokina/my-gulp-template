{
  "name": "my-gulp-template",
  "version": "1.0.0",
  "description": "My gulp template for all my projects.",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint source/js/**/*.js",
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "start": "gulp",
    "build": "gulp build",
    "test": "npm run editorconfig && npm run stylelint && eslint source/js/"
  },
  "author": "",
  "license": "ISC",
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "autoprefixer": "^10.4.2",
    "babelify": "^10.0.0",
    "browser-sync": "^2.27.7",
    "browserify": "^17.0.0",
    "cssnano": "^5.0.15",
    "eslint": "^8.7.0",
    "eslint-config-htmlacademy": "^5.0.0",
    "gulp": "^4.0.2",
    "gulp-imagemin": "^7.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-posthtml": "^3.0.5",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sass-glob": "^1.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgstore": "^9.0.0",
    "gulp-webp": "^4.0.1",
    "posthtml-include": "^1.7.2",
    "sass": "^1.48.0",
    "stylelint": "^13.13.1",
    "stylelint-config-htmlacademy": "^0.1.12",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "dependencies": {
    "caniuse-lite": "^1.0.30001300",
    "del": "^6.0.0"
  }
}
